 <%- include('templates/header'); -%>				
 		
 		<main>
      <div id="content" style="margin: 40px;">    
      <div class="jumbotron col-lg-6 col-md-6 col-sm-6 col-xs-6 offset-3 float-md-center" style="background-color: #ffff; border-style: solid; border-color: #e9ecef; width:50%; margin-bottom: 50px; margin-top: 50px;">

  			<form id="register" method="POST" class="was-validated" action="/register-account">
          <div class="text-center"><h1>Welcome<br></h1><h4>Create your new account</h4></div>
          <div class="form-group" stlye="margin-top:20px;">
          	<label for="username">Username:</label>
          	<input type="text" class="form-control" id="username" placeholder="Enter username" name="username" required>
          	<div class="valid-feedback">Valid.</div>
          	<div class="invalid-feedback">Please fill out this field.</div>
          </div>

          <div class="form-group" style="padding-bottom: 15px">
          	<label for="password">Password:</label>
          		<input type="password" class="form-control" id="password" placeholder="Enter password" name="password" required>
          		<div class="valid-feedback">Valid.</div>
          		<div class="invalid-feedback">Please fill out this field.</div>
          		<div><p style="font-size: 0.8rem">Make sure it's at least 6 characters, 
          		has a number, and has one special character.</p></div>
            </div>
          	<h5>Verify your Account</h5>
            <div>
          	<button style="margin-top: 15px" class="g-recaptcha" data-sitekey="6LddANYZAAAAAI1q1HVnwaJlaqoEf0QOEOsZKi9X" 
            data-callback='onSubmit'>Create Acount</button>
            </div>
  			</form>
			</div>
      </div> 
      <script src="https://www.google.com/recaptcha/api.js" async defer></script>
     <script>
       function onSubmit(token) {
         document.getElementById("register").submit();
       }
     </script> 
