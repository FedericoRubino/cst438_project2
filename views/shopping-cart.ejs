<%- include('templates/header'); -%>

	
        <main>
          
            <div id="content" style="margin:40px;>
            <h1> Shopping Cart</h1> <!-- Page header leave here -->
            <hr style="width:75%; text-align:left; margin-left:10px; padding-bottom: 20px"> <!-- horizontal line leave here -->

            <%var sumPrice = 0; %>
            <%if(products.length <= 0){ %>
                <div>No items in your cart!</div>
            <%} else { %>
                <%for(var i = 0; i < products.length; i++) { %>
                    
                    <%sumPrice += products[i].price%>
                    
                    <!-- repeat as needed based on products -->
                    <div class="jumbotron" style="padding: 10px; margin: 15px; width:81%">
                    	 <div class="row">
                    	 	<!-- responsive columns -->
                    	 	<!-- column with image and name and quantity use js to insert -->
                    	 	<div class="col-sm-8">
                    	 		<div style="margin-right: 10px;">
                    	 			<img style ="float: left; width=400px; height=400px" src="<%=products[i].img_path%>">
                    	 			<div class="content-heading"><h3><%=products[i].product_name%></h3></div>
                    	 			<p>Details: <%=products[i].details%></p>  
                    	 		</div>	
                    	 	</div> 
          					<div class="col-sm-4">
          				 		<p style ="float: left; margin-top: 40px"> Price: $<%=products[i].price%> </p>
                    	 		<a style="margin-right:40px; margin-top: 40px" type="remove" class="btn btn-danger float-right" href='remove-item?orderID=<%=products[i].order_id%>'>Remove Item</a>
                    	 	</div>	
        				</div>
                        
                    </div>
                    <div class="col-sm-8"></div>

                <%} %>
            <%} %>

                <!-- Checkout leave here update total price with js -->
                <div class="row">

                    <div class="col-sm-2">
                        <div class="jumbotron" style="padding: 10px; margin-left: 12px; margin-top: 15px;">
                            <h5>Total: $<%=sumPrice%><br><br></h5>
                            <div class="text-center">
                            <a class="btn btn-primary my-2 my-sm-0"href="/checkout-success">Checkout</a>
                            </div>
                        </div>
                        <!-- clear cart return to homepage update items available add to users recent orders? Javascript popup success -->
                    <div class="col-sm-2"></div>
                    </div>
                </div>
            </div>
        </main>


<%- include('templates/footer'); -%>